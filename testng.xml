<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Ecommerce Test Suite">
    <test name="Regression Suite">
        <classes>
            <class name="tests.SignIn" />
            <class name="tests.AddItemToCart" />
        </classes>
    </test>

    <test name="Smoke Suite">
        <groups>
            <run>
                <include name="smoke" />
            </run>
        </groups>
        <classes>
            <class name="tests.SignIn" />
            <class name="tests.AddItemToCart" />
        </classes>
    </test>

    <test name="Sanity Suite">
        <groups>
            <run>
                <include name="sanity" />
            </run>
        </groups>
        <classes>
            <class name="tests.SignIn" />
            <class name="tests.AddItemToCart" />
        </classes>
    </test>
</suite>
